{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "stock-management-client",
  "version": "0.1.0",
  "identifier": "com.abdellah.dev",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Stock Management",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "maximized": true
      }
    ],
    "security": {
      "dangerousDisableAssetCspModification": true,
      "csp": {
        "default-src": "'self' customprotocol: asset: https: http:",
        "connect-src": "'self' ipc: http://ipc.localhost http://localhost:3000 https: http: ws: wss: *",
        "font-src": [
          "'self'",
          "https://fonts.gstatic.com",
          "https:",
          "http:",
          "data:"
        ],
        "img-src": "'self' asset: http://asset.localhost blob: data: https: http:",
        "style-src": "'unsafe-inline' 'self' https://fonts.googleapis.com https: http:",
        "script-src": "'self' 'unsafe-eval' 'unsafe-inline'"
      },
      "devCsp": {
        "default-src": "'self' customprotocol: asset: https: http:",
        "connect-src": "'self' ipc: http://ipc.localhost http://localhost:3000 https: http: ws: wss: *",
        "font-src": [
          "'self'",
          "https://fonts.gstatic.com",
          "https:",
          "http:",
          "data:"
        ],
        "img-src": "'self' asset: http://asset.localhost blob: data: https: http:",
        "style-src": "'unsafe-inline' 'self' https://fonts.googleapis.com https: http:",
        "script-src": "'self' 'unsafe-eval' 'unsafe-inline'"
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": { "store": null  }
}
